{
    "models": {
        "segmentation" : "../submodules/KittiSeg/hypes/KittiSeg.json",
        "detection" : "../submodules/KittiBox/hypes/kittiBox.json"
    },

    "model_list": ["segmentation", "detection"],

    "path": ["../incl", "../submodules/KittiSeg/incl", "../submodules/KittiBox/incl/"],

    "logging": {
        "display_iter": 200,
        "eval_iter": 800,
        "write_iter": 800,
        "save_iter": 10000,
        "image_iter": 10000
    },

    "selection": {
        "random": false,
        "use_weights": true,
        "weights": [1, 0, 0]
    },

    "loss_build": {
        "recombine": true,
        "weighted": false,
        "weights": [0.7, 2, 0.7]
    },

    "solver": {
        "max_steps": 140000,
        "batch_size": 1
    }
}
